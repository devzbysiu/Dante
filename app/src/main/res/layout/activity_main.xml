<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtMainToolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/actionBarItemColor"
                    android:textSize="18sp"
                    android:alpha="0"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:translationY="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgButtonMainToolbarMore"
                    app:layout_constraintStart_toEndOf="@+id/imgButtonMainToolbarSearch"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:alpha="1"
                    tools:translationY="0dp"
                    tools:scaleX="1"
                    tools:scaleY="1"/>

                <ImageView
                    android:id="@+id/imgButtonMainToolbarMore"
                    android:background="@drawable/bg_rounded_ripple"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="8dp"
                    android:layout_marginEnd="16dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_overflow" />

                <ImageView
                    android:id="@+id/imgButtonMainToolbarSearch"
                    android:background="@drawable/bg_rounded_ripple"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_search" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:id="@+id/dial"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="invisible"
        android:layout_marginBottom="0dp"
        app:layout_anchor="@id/fab"
        app:layout_anchorGravity="top|center_horizontal"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:text="@string/menu_fab_manual"
                android:layout_width="0dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_round_border_white"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_edit"
                android:layout_height="match_parent"/>

            <TextView
                android:text="@string/menu_fab_title"
                android:layout_width="0dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/ic_search"
                app:drawableTint="@color/white"
                android:background="@drawable/bg_round_border_white"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:text="@string/menu_fab_scan"
                android:layout_width="0dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:drawableTop="@drawable/ic_camera"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:background="@drawable/bg_round_border_white"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <RelativeLayout
            android:background="#424242"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:text="Scan a book"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/back"
                style="@style/AppTheme.BorderlessButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"/>

        </RelativeLayout>

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorAccent"
        android:tint="@color/white"
        app:layout_behavior="at.shockbytes.dante.util.ScrollAndMorphAwareFloatingActionButtonBehavior"
        app:srcCompat="@drawable/ic_add"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigationBarColor"
        app:itemIconTint="@drawable/navigation_item"
        app:itemTextColor="@drawable/navigation_item"
        app:layout_anchor="@+id/viewPager"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="at.shockbytes.util.view.BottomNavigationViewBehavior"
        app:layout_insetEdge="bottom"
        app:menu="@menu/menu_navigation" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
