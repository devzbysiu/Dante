<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root_backup_storage_provider"
    android:background="@drawable/bg_round_border"
    android:layout_margin="4dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_backup_storage_provider_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_google_drive" />

    <TextView
        android:id="@+id/tv_backup_storage_provider_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backup_storage_provider_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_backup_storage_provider_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Provider title" />

    <TextView
        android:id="@+id/tv_backup_storage_provider_rationale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_backup_storage_provider_icon"
        tools:text="Explanation" />

    <TextView
        android:id="@+id/tv_backup_item_beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beta"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_backup_storage_provider_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_backup_storage_provider_title"
        app:layout_constraintTop_toTopOf="@+id/tv_backup_storage_provider_title" />

    <TextView
        android:id="@+id/tv_backup_item_discontinued"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discontinued"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/color_error"
        android:textStyle="bold"
        tools:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_backup_storage_provider_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_backup_storage_provider_title"
        app:layout_constraintTop_toTopOf="@+id/tv_backup_storage_provider_title" />

</androidx.constraintlayout.widget.ConstraintLayout>