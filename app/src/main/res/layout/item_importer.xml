<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_border">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_item_import"
        style="@style/AppTheme.RoundedButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/importing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_import_description" />

    <ImageView
        android:id="@+id/iv_item_import"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_import_goodreads" />

    <TextView
        android:id="@+id/tv_item_import_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_import"
        app:layout_constraintStart_toEndOf="@+id/iv_item_import"
        app:layout_constraintTop_toTopOf="@+id/iv_item_import"
        tools:text="Goodreads" />

    <TextView
        android:id="@+id/tv_item_import_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_import_title"
        tools:text="Explanation about importing from goodreads" />

    <TextView
        android:id="@+id/tv_item_import_beta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beta"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_import_title"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_import_description"
        app:layout_constraintTop_toTopOf="@+id/tv_item_import_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
