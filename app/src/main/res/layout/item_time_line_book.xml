<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_time_line_book_right"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_time_line_book_timeline"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/darkest_hour" />

    <TextView
        android:id="@+id/tv_item_time_line_book_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_time_line_book_right"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Their darkest hour" />

    <at.shockbytes.dante.ui.custom.TimeLineItemView
        android:id="@+id/item_time_line_book_timeline"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_time_line_book_left"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_time_line_book_timeline"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/darkest_hour" />

    <TextView
        android:id="@+id/tv_item_time_line_book_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:maxLines="3"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_time_line_book_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Their darkest hour" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_item_time_line_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_item_time_line_book_left,tv_item_time_line_book_left" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_item_time_line_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_item_time_line_book_right,tv_item_time_line_book_right" />

</androidx.constraintlayout.widget.ConstraintLayout>