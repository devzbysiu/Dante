<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialogfragment_btn_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogfragment_state_upcoming"
        android:textColor="@color/white"
        app:backgroundTint="@color/tabcolor_upcoming" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialogfragment_btn_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogfragment_state_current"
        android:textColor="@color/white"
        app:backgroundTint="@color/tabcolor_current" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialogfragment_btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogfragment_state_done"
        android:textColor="@color/white"
        app:backgroundTint="@color/tabcolor_done" />

</LinearLayout>