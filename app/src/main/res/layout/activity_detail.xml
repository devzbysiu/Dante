<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.shockbytes.dante.core.DetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/activity_detail_cardview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_detail_cardview_dates"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:transitionName="@string/transition_name_card"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:id="@+id/activity_detail_img_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="@string/contentdesc_listitem_img_thumb"
                app:srcCompat="@drawable/ic_placeholder"
                android:transitionName="@string/transition_name_thumb" />

            <TextView
                android:id="@+id/activity_detail_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:transitionName="@string/transition_name_title" />

            <TextView
                android:id="@+id/activity_detail_txt_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_title"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp"
                android:transitionName="@string/transition_name_subtitle" />

            <TextView
                android:id="@+id/activity_detail_txt_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_subtitle"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/activity_detail_img_thumb"
                android:layout_toRightOf="@+id/activity_detail_img_thumb"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
                android:transitionName="@string/transition_name_author" />

            <TextView
                android:id="@+id/activity_detail_txt_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_img_thumb"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-light"
                android:padding="8dp" />

            <TextView
                android:id="@+id/activity_detail_txt_published"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_pages"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:padding="8dp" />

            <TextView
                android:id="@+id/activity_detail_txt_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_detail_txt_published"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:padding="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/activity_detail_cardview_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/activity_detail_txt_wishlist_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_upcoming"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_upcoming"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_detail_txt_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_current"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_current"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_detail_txt_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_popup_done"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_popup_done"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
