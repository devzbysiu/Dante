<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAuthor" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSubtitle" parent="TextAuthor">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/DanteBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="DanteBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_menu_bottom_sheet</item>
    </style>

    <style name="AppTheme.Appearance.StateButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>