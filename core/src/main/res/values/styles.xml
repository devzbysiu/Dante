<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAuthor">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/DanteBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="DanteBottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_menu_bottom_sheet</item>
    </style>

</resources>