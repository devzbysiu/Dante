<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_suggestion_picker_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_placeholder"
        tools:layout_width="64dp" />

    <TextView
        android:id="@+id/tv_suggestion_picker_item_title"
        style="@style/TextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_suggestion_picker_item_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_suggestion_picker_item_cover"
        tools:text="Their darkest hour" />

    <TextView
        android:id="@+id/tv_suggestion_picker_item_author"
        style="@style/TextAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_suggestion_picker_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_suggestion_picker_item_title"
        tools:text="Laurence Rees" />


</androidx.constraintlayout.widget.ConstraintLayout>